<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="?attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/list_item_headache_inout_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="30dp"/>


    <TextView
        android:id="@+id/list_item_headache_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_headache_inout_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Headache Title"
        android:background="?attr/selectableItemBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_headache_title_text_view"
        android:layout_toLeftOf="@+id/list_item_headache_inout_check_box"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/list_item_headache_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Headache Date"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/list_item_headache_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Headache Time"
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>